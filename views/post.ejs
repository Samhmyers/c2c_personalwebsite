<div class="container">
    <article class="post">
        <h1><%= title %></h1>
        <div class="post-meta">
            <time datetime="<%= created.toISOString() %>">
                Posted on <%= created.toLocaleDateString() %>
            </time>
            <% if (modified > created) { %>
                <span class="last-updated">
                    Last updated on <%= modified.toLocaleDateString() %>
                </span>
            <% } %>
        </div>
        <div class="post-content">
            <%- content %>
        </div>
        <a href="/blog" class="back-to-blog">‚Üê Back to Blog</a>
    </article>
</div> 